<?xml version="1.0" encoding="UTF-8"?>
<javamail-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://intra-mart.co.jp/system/mail/javamail/config/javamail-config"
    xsi:schemaLocation="http://intra-mart.co.jp/system/mail/javamail/config/javamail-config ../../schema/javamail-config.xsd ">

  <smtp>
    <smtp-server id="default" host="smtp.office365.com" port="587">
      <smtps enable="true" starttls="true"/>
      <auth enable="true">
        <user>83002566@bandainamco.co.jp</user>
        <password>password@1</password>
      </auth>
      <x-mailer>intra-mart MailSender ver 8.0</x-mailer>
      <debug>false</debug>
      <connection-timeout>-1</connection-timeout>
      <timeout>-1</timeout>
    </smtp-server>
    
    <smtp-server id="cactus" host="smtp.office365.com" port="587">
      <smtps enable="true" starttls="true"/>
      <auth enable="true">
        <user>83002873@bandainamco.co.jp</user>
        <password>password@1</password>
      </auth>
      <x-mailer>intra-mart MailSender ver 8.0</x-mailer>
      <debug>false</debug>
      <connection-timeout>-1</connection-timeout>
      <timeout>-1</timeout>
    </smtp-server>
    
